generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Soybeans, Corn, Cotton, Coffee, Sugarcane
enum crops {
  SOYBEANS
  CORN
  COTTON
  COFFEE
  SUGARCANE
}

model producer {
  id    String  @id @default(uuid())
  cpf   String? @unique
  cnpj  String? @unique
  name  String
  farms farm[]
}

model farm {
  id              String   @id @default(uuid())
  name            String
  city            String
  state           String
  total_area      Float
  arable_area     Float
  vegetation_area Float
  crops           crops[]
  producer        producer @relation(fields: [producerId], references: [id])
  producerId      String
}
