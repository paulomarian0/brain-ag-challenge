generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Soybeans, Corn, Cotton, Coffee, Sugarcane
enum Crops {
  SOYBEANS
  CORN
  COTTON
  COFFEE
  SUGARCANE
}

model producer {
  id                   String  @id @default(uuid())
  cpf                  String? @unique
  cnpj                 String? @unique
  name                 String
  farm_name            String
  city                 String
  state                String
  farm_total_area      Float
  farm_arable_area     Float
  farm_vegetation_area Float
  crops                Crops
}
