generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Soybeans, Corn, Cotton, Coffee, Sugarcane
enum Crops {
  SOYBEANS
  CORN
  COTTON
  COFFEE
  SUGARCANE
}

model Producer {
  id    String  @id @default(uuid())
  cpf   String? @unique
  cnpj  String? @unique
  name  String
  farms Farm[]
}

model Farm {
  id              String   @id @default(uuid())
  name            String
  city            String
  state           String
  total_area      Float
  arable_area     Float
  vegetation_area Float
  crops           Crops[]
  producer        Producer @relation(fields: [producerId], references: [id])
  producerId      String
}
